# .coveragerc
[run]
branch = True
source = app

[report]
# Omit files/directories from coverage
omit =
    */__init__.py
    */migrations/*
    */tests/*
    run.py
    config.py

# Fail if coverage < 80%
fail_under = 80

# Exclude lines that shouldn't count as uncovered
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
    def __repr__
    def __str__
